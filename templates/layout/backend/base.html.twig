<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Blitz Backend{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="{{ asset('assets/css/default.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/css/navigation.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/css/product.css') }}" rel="stylesheet"/>
</head>
<body>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <header>
        <div class="row w-100 topnavigation-container">
            <div class="col-4"></div>
            <div class="col-8">
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <span>logout</span>
                    </div>
                </div>
            </div>
        </div>
        <nav id="sidenav-container">
            <div class="sidenav">
                <a id="burgerbtn" class="burgerbtn">&#9776;</a>
                <a id="close-navigation" class="closebtn">&times;</a>
                <ul id="nav navbar-nav">
                    <li>
                        <a href="{{ path('list_backend_products') }}" class="module_navigation-link" data-module-link="productmanagement">
                            {{ source('images/icons/backend/navigation/productmanagement.svg') }}
                            <span>Productmanagement</span>
                        </a>
                    </li>
                    <li>
                        <a class="module_navigation-link" data-module-link="statistics">
                            {{ source('images/icons/backend/navigation/statistics.svg') }}
                            <span>Product Statistics</span>
                        </a>
                    </li>
                    <li>
                        <a class="module_navigation-link" data-module-link="fileserver">
                            {{ source('images/icons/backend/navigation/fileserver.svg') }}
                            <span>Fileserver</span>
                        </a>
                    </li>
                    <li>
                        <a class="module_navigation-link" data-module-link="payment">
                            {{ source('images/icons/backend/navigation/payment.svg') }}
                            <span>Payment methods</span>
                        </a>
                    </li>
                    <li>
                        <a class="module_navigation-link" data-module-link="order">
                            {{ source('images/icons/backend/navigation/order.svg') }}
                            <span>Orders</span>
                        </a>
                    </li>
                    <li>
                        <a class="module_navigation-link" data-module-link="settings">
                            {{ source('images/icons/backend/navigation/settings.svg') }}
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endif %}
</header>
<main>
    <div class="container text-center">
        <div class="row">
            {% block body %}{% endblock %}
        </div>
    </div>
</main>
</body>
<footer>
    <script src="{{ asset('assets/javascript/navigation.js') }}"></script>
</footer>
</html>
