<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Blitz Backend{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="{{ asset('assets/css/default.css') }}" rel="stylesheet"/>

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <div class="header">
        <h1>Blitz Shop Backend</h1>
    </div>
</header>
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <nav id="sidenav-container">
        <span style="font-size:30px;cursor:pointer" id="burger">&#9776; open</span>
        <div class="sidenav">
            <a id="close-navigation" class="closebtn">&times;</a>
            <ul id="nav navbar-nav">
                <li class="active">
                    <a class="module_navigation-link">Productmanagement</a>
                </li>
                <li>
                    <a class="module_navigation-link">Product Statistics</a>
                </li>
                <li>
                    <a class="module_navigation-link">Fileserver</a>
                </li>
                <li>
                    <a class="module_navigation-link">Payment methods</a>
                </li>
                <li>
                    <a class="module_navigation-link">Orders</a>
                </li>
                <li>
                    <a class="module_navigation-link">Settings</a>
                </li>
            </ul>
        </div>
    </nav>
{% endif %}
<main>
    <div class="container text-center">
        <div class="row">
            {% block body %}{% endblock %}
        </div>
    </div>
</main>
</body>
<footer>
    <script src="{{ asset('assets/javascript/navigation.js') }}"></script>
</footer>
</html>
